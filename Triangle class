package lesson1t2;

public class Triangle {
		private double aSide;
		private double bSide;
		private double cSide;
		
		
		
		public Triangle(double a, double b, double c) {
			super();
			this.aSide = a;
			this.bSide = b;
			this.cSide = c;
		}

		public Triangle() {
			
		}
		
		public double halfPerimetr(double a,double b,double c){
			double halfP = (a+b+c)/2;
			return halfP;
		}
		public void geron(){
			double hp = halfPerimetr(aSide, bSide, cSide);
			double formulaGerona = Math.sqrt((hp*(hp-aSide)*(hp-bSide)*(hp-cSide)));
			System.out.println(formulaGerona);
		}
		
}
